#!/bin/bash

SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

install_deps() {
		sudo apt install -y python3-pytest
}

install_deps &> /dev/null

python3 -m pytest --junitxml=report.xml $SCRIPT_DIR/checkbox-provider-tdx/bin/test_*.py
